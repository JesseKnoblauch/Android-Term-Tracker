<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zybooks.termtrackerjesse">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TermTrackerJesse">
        <activity
            android:name=".views.ShareNoteActivity"
            android:label="@string/Share_Note"
            android:parentActivityName=".views.DetailsNoteActivity" />
        <activity
            android:name=".views.EditInstructorActivity"
            android:label="@string/edit_instructor"
            android:parentActivityName=".views.DetailsCourseActivity" />
        <activity
            android:name=".views.EditNoteActivity"
            android:label="@string/edit_note"
            android:parentActivityName=".views.DetailsNoteActivity" />
        <activity
            android:name=".views.EditTermActivity"
            android:label="@string/edit_term"
            android:parentActivityName=".views.DetailsTermActivity" />
        <activity
            android:name=".views.EditCourseActivity"
            android:label="@string/edit_course"
            android:parentActivityName=".views.DetailsCourseActivity" />
        <activity
            android:name=".views.EditAssessmentActivity"
            android:label="@string/edit_assessment"
            android:parentActivityName=".views.DetailsAssessmentActivity" />
        <activity
            android:name=".views.DetailsAssessmentActivity"
            android:label="@string/details_assessment"
            android:launchMode="singleTop"
            android:parentActivityName=".views.ListAssessmentActivity" />
        <activity
            android:name=".views.DetailsCourseActivity"
            android:label="@string/details_course"
            android:launchMode="singleTop"
            android:parentActivityName=".views.ListCourseActivity" />
        <activity
            android:name=".views.DetailsTermActivity"
            android:label="@string/details_term"
            android:launchMode="singleTop"
            android:parentActivityName=".views.ListTermsActivity" />
        <activity
            android:name=".views.DetailsNoteActivity"
            android:label="@string/Note_Details"
            android:launchMode="singleTop"
            android:parentActivityName=".views.DetailsCourseActivity" />
        <activity
            android:name=".views.ListAssessmentActivity"
            android:label="@string/assessments_list"
            android:parentActivityName=".views.MainActivity" />
        <activity
            android:name=".views.ListCourseActivity"
            android:label="@string/courses_list"
            android:parentActivityName=".views.MainActivity" />
        <activity
            android:name=".views.ListTermsActivity"
            android:label="@string/terms_list"
            android:parentActivityName=".views.MainActivity" />
        <activity android:name=".views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".receivers.AlertReceiver"/>
    </application>

</manifest>